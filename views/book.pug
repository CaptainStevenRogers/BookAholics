extends layout.pug

block content
  .col-md-4
    .card.mb-4.shadow-sm
      svg.bd-placeholder-img.card-img-top&attributes({"width": "100%"}, {"height": "225"}, {"focusable": "false"}, {"role": "img"})
        title #{book.title}
        script(src='/js/script.js' type="text/javascript")
        rect(width="100%" height="100%" fill="#55595c")
        text(x="50%" y="50%" fill="#eceeef" dy=".3em") #{book.title} 
      .card-body
        .card-text #{book.author} 
        .card-text.mb-4 #{book.description}
        p#currentBookISBN #{book.isbn}
        .d-flex.justify-content-between.align-items-center
          .btn-group
            button.btn.btn-sm.btn-outline-secondary.updateBtn
              a(href='/update/'+book.isbn) Edit
            form(action='/delete/'+book.isbn+'?_method=DELETE' method="POST")  
              button.btn.btn-sm.btn-outline-secondary.deleteBtn Delete
          small.text-muted #{book.published}